<refentry id="identity-instruction" 
    xmlns="http://docbook.org/ns/docbook" version="5.0" xml:lang="en"
    xmlns:xi="http://www.w3.org/2001/XInclude">

    <indexterm>
        <primary>identity</primary>
    </indexterm>

    <refmeta>
        <refentrytitle>identity</refentrytitle>
    </refmeta>

    <refnamediv>
        <refname>identity</refname>
        <refpurpose>Resets the transform matrix of the specified layer to the identity matrix.</refpurpose>
    </refnamediv>

    <refsynopsisdiv>

        <title>Synopsis</title>

        <para>
            <command>
                identity
                <parameter>layer</parameter>
            </command>
        </para>

    </refsynopsisdiv>

    <refsection>
        <title>Description</title>
        <para>Resets the transform matrix of the specified layer to the identity matrix.</para>
    </refsection>

    <refsection>

        <title>Parameters</title>

        <variablelist>
            <varlistentry>
                 <term><parameter>layer</parameter></term>
                 <listitem><para>The layer whose transform matrix should be reset.</para></listitem>
             </varlistentry>
        </variablelist>

    </refsection>

    <refsection>

        <title>Example</title>

        <programlisting>[example]</programlisting>

    </refsection>

</refentry>