<refentry id="reset-instruction" 
    xmlns="http://docbook.org/ns/docbook" version="5.0" xml:lang="en"
    xmlns:xi="http://www.w3.org/2001/XInclude">

    <indexterm>
        <primary>reset</primary>
    </indexterm>

    <refmeta>
        <refentrytitle>reset</refentrytitle>
    </refmeta>

    <refnamediv>
        <refname>reset</refname>
        <refpurpose>Resets the transformation and clip state of the layer.</refpurpose>
    </refnamediv>

    <refsynopsisdiv>

        <title>Synopsis</title>

        <para>
            <command>
                reset
                <parameter>layer</parameter>
            </command>
        </para>

    </refsynopsisdiv>

    <refsection>
        <title>Description</title>
        <para>Resets the transformation and clip state of the layer.</para>
    </refsection>

    <refsection>

        <title>Parameters</title>

        <variablelist>
            <varlistentry>
                 <term><parameter>layer</parameter></term>
                 <listitem><para>The layer whose state should be reset.</para></listitem>
             </varlistentry>
        </variablelist>

    </refsection>

    <refsection>

        <title>Example</title>

        <programlisting>[example]</programlisting>

    </refsection>

</refentry>