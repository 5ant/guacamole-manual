<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE refentry PUBLIC "-//OASIS//DTD DocBook V5.0//EN"
    "http://docbook.org/xml/5.0/dtd/docbook.dtd">

<refentry id="error-instruction" 
    xmlns="http://docbook.org/ns/docbook" version="5.0" xml:lang="en"
    xmlns:xi="http://www.w3.org/2001/XInclude">

    <indexterm>
        <primary>error</primary>
    </indexterm>

    <refmeta>
        <refentrytitle>error</refentrytitle>
    </refmeta>

    <refnamediv>
        <refname>error</refname>
        <refpurpose>Notifies the client that the connection is about to be closed due to the specified error.</refpurpose>
    </refnamediv>

    <refsynopsisdiv>

        <title>Synopsis</title>

        <para>
            <command>
                error
                <parameter>text</parameter>
            </command>
        </para>

    </refsynopsisdiv>

    <refsection>
        <title>Description</title>
        <para>Notifies the client that the connection is about to be closed due to the specified error. This message can be sent by the server during any phase.</para>
    </refsection>

    <refsection>

        <title>Parameters</title>

        <variablelist>
            <varlistentry>
                 <term><parameter>text</parameter></term>
                 <listitem><para>An arbitrary message describing the error</para></listitem>
             </varlistentry>
        </variablelist>

    </refsection>

    <refsection>

        <title>Example</title>

        <programlisting>[example]</programlisting>

    </refsection>

</refentry>