<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE refentry PUBLIC "-//OASIS//DTD DocBook V5.0//EN"
    "http://docbook.org/xml/5.0/dtd/docbook.dtd">

<refentry id="size-instruction" 
    xmlns="http://docbook.org/ns/docbook" version="5.0" xml:lang="en"
    xmlns:xi="http://www.w3.org/2001/XInclude">

    <indexterm>
        <primary>size</primary>
    </indexterm>

    <refmeta>
        <refentrytitle>size</refentrytitle>
    </refmeta>

    <refnamediv>
        <refname>size</refname>
        <refpurpose>Sets the size of the specified layer.</refpurpose>
    </refnamediv>

    <refsynopsisdiv>

        <title>Synopsis</title>

        <para>
            <command>
                size
                <parameter>layer</parameter>
                <parameter>width</parameter>
                <parameter>height</parameter>
            </command>
        </para>

    </refsynopsisdiv>

    <refsection>
        <title>Description</title>
        <para>Sets the size of the specified layer.</para>
    </refsection>

    <refsection>

        <title>Parameters</title>

        <variablelist>
            <varlistentry>
                 <term><parameter>layer</parameter></term>
                 <listitem><para>The layer to resize.</para></listitem>
             </varlistentry>
            <varlistentry>
                 <term><parameter>width</parameter></term>
                 <listitem><para>The new width of the layer</para></listitem>
             </varlistentry>
            <varlistentry>
                 <term><parameter>height</parameter></term>
                 <listitem><para>The new height of the layer</para></listitem>
             </varlistentry>
        </variablelist>

    </refsection>

    <refsection>

        <title>Example</title>

        <programlisting>[example]</programlisting>

    </refsection>

</refentry>