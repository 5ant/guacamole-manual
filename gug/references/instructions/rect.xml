<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE refentry PUBLIC "-//OASIS//DTD DocBook V5.0//EN"
    "http://docbook.org/xml/5.0/dtd/docbook.dtd">

<refentry id="rect-instruction" 
    xmlns="http://docbook.org/ns/docbook" version="5.0" xml:lang="en"
    xmlns:xi="http://www.w3.org/2001/XInclude">

    <indexterm>
        <primary>rect</primary>
    </indexterm>

    <refmeta>
        <refentrytitle>rect</refentrytitle>
    </refmeta>

    <refnamediv>
        <refname>rect</refname>
        <refpurpose>Adds a rectangular path to the specified layer.</refpurpose>
    </refnamediv>

    <refsynopsisdiv>

        <title>Synopsis</title>

        <para>
            <command>
                rect
                <parameter>mask</parameter>
                <parameter>layer</parameter>
                <parameter>x</parameter>
                <parameter>y</parameter>
                <parameter>width</parameter>
                <parameter>height</parameter>
            </command>
        </para>

    </refsynopsisdiv>

    <refsection>
        <title>Description</title>
        <para>Adds a rectangular path to the specified layer.</para>
    </refsection>

    <refsection>

        <title>Parameters</title>

        <variablelist>
            <varlistentry>
                 <term><parameter>mask</parameter></term>
                 <listitem><para>The channel mask to apply when drawing the image data.</para></listitem>
             </varlistentry>
            <varlistentry>
                 <term><parameter>layer</parameter></term>
                 <listitem><para>The destination layer.</para></listitem>
             </varlistentry>
            <varlistentry>
                 <term><parameter>x</parameter></term>
                 <listitem><para>The X coordinate of the upper-left corner of the rectangle to draw.</para></listitem>
             </varlistentry>
            <varlistentry>
                 <term><parameter>y</parameter></term>
                 <listitem><para>The Y coordinate of the upper-left corner of the rectangle to draw.</para></listitem>
             </varlistentry>
            <varlistentry>
                 <term><parameter>width</parameter></term>
                 <listitem><para>The width of the rectangle to draw.</para></listitem>
             </varlistentry>
            <varlistentry>
                 <term><parameter>height</parameter></term>
                 <listitem><para>The width of the rectangle to draw.</para></listitem>
             </varlistentry>
        </variablelist>

    </refsection>

    <refsection>

        <title>Example</title>

        <programlisting>[example]</programlisting>

    </refsection>

</refentry>