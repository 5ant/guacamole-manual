<refentry id="push-instruction" 
    xmlns="http://docbook.org/ns/docbook" version="5.0" xml:lang="en"
    xmlns:xi="http://www.w3.org/2001/XInclude">

    <indexterm>
        <primary>push</primary>
    </indexterm>

    <refmeta>
        <refentrytitle>push</refentrytitle>
    </refmeta>

    <refnamediv>
        <refname>push</refname>
        <refpurpose>Saves the current state of the specified layer to the stack.</refpurpose>
    </refnamediv>

    <refsynopsisdiv>

        <title>Synopsis</title>

        <para>
            <command>
                push
                <parameter>LAYER</parameter>
            </command>
        </para>

    </refsynopsisdiv>

    <refsection>
        <title>Description</title>
        <para>Saves the current state of the specified layer to the stack. The state saved includes the current transformation matrix and clipping path.</para>
    </refsection>

