<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE refentry PUBLIC "-//OASIS//DTD DocBook V5.0//EN"
    "http://docbook.org/xml/5.0/dtd/docbook.dtd">

<refentry id="start-instruction" 
    xmlns="http://docbook.org/ns/docbook" version="5.0" xml:lang="en"
    xmlns:xi="http://www.w3.org/2001/XInclude">

    <indexterm>
        <primary>start</primary>
    </indexterm>

    <refmeta>
        <refentrytitle>start</refentrytitle>
    </refmeta>

    <refnamediv>
        <refname>start</refname>
        <refpurpose>Starts a new subpath at the specified point.</refpurpose>
    </refnamediv>

    <refsynopsisdiv>

        <title>Synopsis</title>

        <para>
            <command>
                start
                <parameter>layer</parameter>
                <parameter>x</parameter>
                <parameter>y</parameter>
            </command>
        </para>

    </refsynopsisdiv>

    <refsection>
        <title>Description</title>
        <para>Starts a new subpath at the specified point.</para>
    </refsection>

    <refsection>

        <title>Parameters</title>

        <variablelist>
            <varlistentry>
                 <term><parameter>layer</parameter></term>
                 <listitem><para>The layer which should start a new subpath.</para></listitem>
             </varlistentry>
            <varlistentry>
                 <term><parameter>x</parameter></term>
                 <listitem><para>The X coordinate of the first point of the new subpath.</para></listitem>
             </varlistentry>
            <varlistentry>
                 <term><parameter>y</parameter></term>
                 <listitem><para>The Y coordinate of the first point of the new subpath.</para></listitem>
             </varlistentry>
        </variablelist>

    </refsection>

    <refsection>

        <title>Example</title>

        <programlisting>[example]</programlisting>

    </refsection>

</refentry>